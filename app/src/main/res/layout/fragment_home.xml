        </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layProductosbusqueda"
        android:orientation="vertical">

    </LinearLayout>

        <LinearLayout
