<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividerColor" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PartClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:text="Clave"
                android:textColor="@color/DarkPrimaryColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/AccentColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/productoImag"
                    android:layout_width="140dp"
                    android:layout_height="113dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/desingimage"
                    android:backgroundTint="#EFE9E9"
                    android:src="@drawable/aboutlogo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Descr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Descripcion"
                        android:textSize="9sp"
                        android:maxLines="4"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/Linea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Linea"
                        android:textSize="9sp"
                        android:maxLines="4"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/Precio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Precio"
                        android:textColor="#48E305"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

