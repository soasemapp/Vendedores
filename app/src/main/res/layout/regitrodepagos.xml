<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:orientation="vertical"
    tools:context=".activities.Consultas.ActivityFacturasVencidas">

    <include layout="@layout/action_bar_toolbar" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:hint="@string/vendedor"
                            android:maxLines="1"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:startIconDrawable="@drawable/icons_hombre_de_negocios"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cVendedor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons_gesti_n_de_clientes" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btncliente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Selecciona un cliente"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons_documento" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnfactura"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Seleccione las facturas"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="@string/monto"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:startIconDrawable="@drawable/icons_dinero"
                            android:enabled="false"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/importestr"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons_banco" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnbanco"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Seleccione el banco"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icons_muro_de_pago" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnforma"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Seleccione forma de pago"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:hint="@string/fecha"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:helperText="Seleccione una fecha"
                            app:startIconDrawable="@drawable/icons_fecha_hasta"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/fecha"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:inputType="text"
                                android:maxLines="1" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:hint="@string/comentarios_1"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp"
                            app:counterEnabled="true"
                            app:counterMaxLength="60"
                            app:startIconDrawable="@drawable/icons_burbuja_de_di_logo_con_puntos"
                            app:startIconTint="@null">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/comentariosstr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:textSize="15sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                   ¿
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAgregar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/roundbutton"
                            android:backgroundTint="@color/PrimaryColor"
                            android:text="Agregar"
                            android:textColor="#FFFFFF"
                            />




                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Fecha"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Hora"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Clave Cliente"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"/>

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="400dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Nombre del Cliente"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Facturas"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Importe"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Banco"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />


                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Forma de pago"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="COMENTARIO 1"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="COMENTARIO 2"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="COMENTARIO 3"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/PrimaryColor" />
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/lis_pagos"
                                        android:layout_width="match_parent"
                                        android:layout_height="300dp">

                                    </androidx.recyclerview.widget.RecyclerView>

                                </LinearLayout>

                            </ScrollView>

                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

            </ScrollView>




        </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>